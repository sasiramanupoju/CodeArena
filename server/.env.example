# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=3001
HOST=0.0.0.0
FRONTEND_URL=http://localhost:5000

# Database Configuration
MONGODB_URL=mongodb://localhost:27017/codearena
# For MongoDB Atlas (production):
# MONGODB_URL=mongodb+srv://username:password@cluster.mongodb.net/codearena?retryWrites=true&w=majority

# Security Configuration
SESSION_SECRET=your-super-secret-session-key-at-least-32-characters-long
JWT_SECRET=your-jwt-secret-key-for-token-signing

# Google OAuth Configuration (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3001/api/auth/google/callback

# Email Configuration (Optional - for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password

# Code Execution System
EXECUTION_API_URL=http://localhost:3000
EXECUTION_PORT=3000
EXECUTION_TEMP_DIR=./temp

# Redis Configuration (for job queues)
REDIS_URL=redis://localhost:6379

# Development/Debug Settings
DEBUG_MODE=false
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=http://localhost:5000
CORS_CREDENTIALS=true